{
  "folders": [
    {{#each folders}}
    {
        "name": "{{this}}",
        "id": "{{guid}}",
        "messages": [
            {{#repeat 30}}
            {
                "title": "{{lorem 5}}",
                "body": "{{lorem 40}}",
                "time": "{{date '2015' '2016' 'DD/MM hh:mm'}}",
                "sender": {
                    "avatar": "http://api.randomuser.me/portraits/med/men/{{int 1 200}}.jpg",
                    "name": "{{firstName}} {{lastName}}",
                    "email": "{{email}}"
                }
            }
            {{/repeat}}
        ]
    }{{#if @last}}{{else}},{{/if}}
    {{/each}}
  ]
}
